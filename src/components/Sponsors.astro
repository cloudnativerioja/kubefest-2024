---
import { Image } from 'astro:assets';

import Google from '@/images/sponsor/google.svg';
import Cncf from '@/images/sponsor/cncf.svg';
import Bosonit from '@/images/sponsor/bosonit.svg';
import Fer from '@/images/sponsor/fer.svg';
import GlobantCreate from '@/images/sponsor/globant-create.svg';
import Civo from '@/images/sponsor/civo.svg';
import Aertic from '@/images/sponsor/aertic.svg';
---

<!-- Brand Start -->
<div id="sponsors" class="brand-area section-padding-01 pb-5">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title-wrap">
          <div class="section-title text-center">
            <h5 class="sub-title orange">Sponsors</h5>
            <h2 class="title">Ellos lo hacen posible</h2>
          </div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center text-center py-5">
      <div class="col-md-3 col-6 d-flex align-items-center">
        <div class="brand-item">
          <a
            target="_blank"
            rel="nofollow"
            href="https://developers.google.com/community/devfest"
          >
            <Image src={Google} alt="Google Developers" />
          </a>
        </div>
      </div>
      <div class="col-md-4 col-7 d-flex align-items-center">
        <div class="brand-item">
          <a target="_blank" rel="nofollow" href="https://www.cncf.io/">
            <Image src={Cncf} alt="Cloud Native Computing Foundation (CNCF)" />
          </a>
        </div>
      </div>
      <div class="col-md-3 col-6 d-flex align-items-center">
        <div class="brand-item">
          <a target="_blank" rel="nofollow" href="https://bosonit.com">
            <Image class="mb-2" src={Bosonit} alt="Bosonit" />
          </a>
        </div>
      </div>
      <div class="col-md-2 col-5 d-flex align-items-center">
        <div class="brand-item">
          <a target="_blank" rel="nofollow" href="https://sie.fer.es/">
            <Image
              class="px-3"
              src={Fer}
              width={156}
              height={156}
              alt="Federación de Empresas de La Rioja (FER)"
            />
          </a>
        </div>
      </div>
      <div class="col-md-5 col-8 d-flex align-items-center">
        <div class="brand-item">
          <a
            target="_blank"
            rel="nofollow"
            href="https://www.globant.com/studio/create"
          >
            <Image src={GlobantCreate} alt="Globant Create" />
          </a>
        </div>
      </div>
      <div class="col-md-3 col-6 d-flex align-items-center">
        <div class="brand-item">
          <a target="_blank" rel="nofollow" href="https://www.civo.com/">
            <Image src={Civo} alt="Civo" height={200} />
          </a>
        </div>
      </div>
      <div class="col-md-3 col-6 d-flex align-items-center">
        <div class="brand-item">
          <a target="_blank" rel="nofollow" href="https://aertic.es/">
            <Image
              src={Aertic}
              alt="Agrupación Empresarial Innovadora del sector TIC de La Rioja (Aertic)"
            />
          </a>
        </div>
      </div>
    </div>
  </div>
  <!-- Brand End -->
</div>
